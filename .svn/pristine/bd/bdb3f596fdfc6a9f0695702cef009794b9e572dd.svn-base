									<td><c:out value="${torneo.categoria}" /></td>
									<td><c:out value="${torneo.circolo}" /></td>
									<td><c:out value="${torneo.tipologia}" /></td>
									<td><c:out value="${torneo.arbitro}" /></td>
									<td><c:out value="${torneo.federazione}" /></td>
