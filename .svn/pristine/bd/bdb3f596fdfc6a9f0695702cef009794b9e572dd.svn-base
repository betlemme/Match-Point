								<button type="submit" class="btn btn-default">Registra</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>


	<!-- Modale per l'eliminazione -->
	<div class="modal fade" id="eliminazione" tabindex="-1" role="dialog"
		aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"
						aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">Sei sicuro di disicriverti?</h4>
				</div>
				<div class="modal-body">

					<form method="POST" action="<c:url value="/iscrizione-torneo"/>"
						class="form-horizontal" role="form" id="eliminaform">

						<input type="hidden" name="email" value="${giocatore.email}">
						
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-default">Ok</button>
								<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>	







</body>

