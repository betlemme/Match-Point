	}//findTorneoDisponibile

	
	/**
	 * 
	 * @param un giocatore 
	 * @return Una lista contenente i tornei conclusi in cui il giocatore ha partecipato.
	 * 
	 * @throws SQLException
	 *             Errore nella ricerca del torneo
	 */
